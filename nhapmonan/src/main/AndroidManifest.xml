<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tranhoanghuan.it.com.nhapmonan">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_them_mon_an"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_them_mon_an"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NhapMonAn"
            android:label="Thêm món ăn"
            android:parentActivityName=".Input" />
        <activity android:name=".Input">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KhuyenMai"
            android:label="Thêm khuyến mãi"
            android:parentActivityName=".Input" />
        <activity
            android:name=".XoaVaSua"
            android:label="Xóa và Sửa"
            android:parentActivityName=".Input" />
        <activity
            android:name=".DsMon"
            android:label="Xóa và Sửa"
            android:parentActivityName=".XoaVaSua" />
        <activity
            android:name=".SuaMonAn"
            android:label="Sửa món ăn"></activity>
    </application>

</manifest>